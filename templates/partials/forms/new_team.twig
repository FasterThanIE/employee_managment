<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">New team</h4>
            <p class="card-category">Write the team name that you want to create.</p>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr':{'class':'__form_new_team'}}) }}
                <div class="row">
                    <div class="col-md-5">
                        {% include "partials/forms/form_errors.twig" with {'form':form} %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group bmd-form-group">
                            {{ form_label(form.name, 'Enter the team name', {attr:{'class':'bmd-label-floating'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right __save_team'}}) }}
                <div class="clearfix"></div>
            {{ form_end(form) }}
        </div>
    </div>
</div>