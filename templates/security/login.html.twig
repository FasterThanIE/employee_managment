{% extends 'base.twig' %}

{% block title %}Login | Employee Management{% endblock %}

{% block content %}
<div class="d-flex col-lg-12 justify-content-center align-items-center min100VH">
    <div class="col-12 col-lg-4 col-md-8 bg-light p-lg-5 p-2 border rounded">
        <form method="post" action="{{ path('app_login') }}">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

            <div class="col-md-12">
                <div class="form-group bmd-form-group">
                    <label for="inputEmail" class="bmd-label-floating">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group bmd-form-group">
                    <label for="inputPassword" class="bmd-label-floating">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required autofocus>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group bmd-form-group">
                    <button class="btn btn-primary col-12" >Login</button>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group bmd-form-group">
                    <h1 class="h3 mb-3 font-weight-normal">Dont have an account?</h1>
                    <a href="{{ path('app_register') }}" class="btn btn-primary col-12" >Register</a>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </div>
</div>

{% endblock %}
