{% extends "pages/dashboard.twig" %}

{% block content %}

    {% if app.request.get('message') %}
        <h4 class="text-info">{{ app.request.get('message') }}</h4>
        <hr>
    {% endif %}

    {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="d-flex flex-column">
            <div class="form-group">
                {{ form_label(form.first_name, 'First name') }}
                {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.last_name, 'Last name') }}
                {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group" id="some-custom-id">
                {{ form_widget(form.save, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}